{
  "rewrites": [
    {
      "source": "/:set/:icon.svg",
      "destination": "/api/icons/:set/:icon.svg",
      "has": [
        {
          "type": "host",
          "value": "icons.modul.es"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/",
      "destination": "https://modul.es",
      "permanent": false,
      "has": [
        {
          "type": "host",
          "value": "icons.modul.es"
        }
      ]
    }
  ],
  "headers": [
    {
      "source": "/api/icons/(.*)",
      "headers": [
        {
          "key": "Cache-Control", 
          "value": "public, max-age=31536000, immutable"
        },
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        }
      ]
    }
  ],
  "functions": {
    "app/api/icons/[...path]/route.ts": {
      "maxDuration": 10
    }
  }
}